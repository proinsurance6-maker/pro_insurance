NODE_ENV=development
PORT=5000

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/insurance_db"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-too
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Twilio SMS (for OTP)
# Using Auth Token method (simpler for trial accounts)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Optional: Twilio Verify Service (recommended for trial accounts)
# Get Service SID from: https://console.twilio.com/us1/develop/verify/services
# TWILIO_VERIFY_SERVICE_SID=your-verify-service-sid

# Email - SendGrid (recommended)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=Insurance Book <noreply@insurancebook.com>

# Email - SMTP (alternative)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-password

# OpenAI (for Document OCR/Scanning)
OPENAI_API_KEY=sk-your-openai-api-key

# Frontend URL
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
