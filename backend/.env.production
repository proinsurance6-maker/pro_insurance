NODE_ENV=production
PORT=5000

# Database - Will be provided by Railway
DATABASE_URL="[RAILWAY_POSTGRES_CONNECTION_STRING]"

# JWT Secrets (generate strong ones)
JWT_SECRET="your-secret-key-min-32-characters-long-change-this"
JWT_REFRESH_SECRET="your-refresh-secret-min-32-characters-long-change-this"

# Email Configuration (Optional - for sending reminders)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# CORS - Update with your Vercel domain
CORS_ORIGIN=https://your-app.vercel.app

# Logging
LOG_LEVEL=info
